<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h3>Welcome to Report Manager</h3>
      </div>
      <div class="card-body">
        <p>Manage your reports efficiently with our comprehensive reporting system.</p>
        <%= link_to "View All Reports", reports_path, class: "btn btn-primary" %>
        <%= link_to "Create New Report", new_report_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5>Recent Reports</h5>
      </div>
      <div class="card-body">
        <% if @recent_reports.any? %>
          <% @recent_reports.each do |report| %>
            <div class="mb-2">
              <%= link_to report.title, report, class: "text-decoration-none" %>
              <small class="text-muted d-block"><%= report.category %></small>
            </div>
          <% end %>
        <% else %>
          <p class="text-muted">No reports yet.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
